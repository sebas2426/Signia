<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/frontend/images/icono-web.svg">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/frontend/styles/styles.css">
    <script src="/frontend/scripts/index.js" defer ></script>
    <title>Acceder</title>
    <script>
        if (localStorage.getItem('dark-mode') === 'enabled') {
          document.body.classList.add('dark-mode');
        }
      </script>
</head>
<body>
   <%- include('partials/header') %>

    <h1 class="tituloLoginRegistro" >Accede a tu cuenta</h1>
    <form class="contenedorLoginAcceder" action="/acceder" method="POST">
        <h3>Usuario</h3>
        <input type="text" class="form-control" name="user" id="user">
        <h3>Contrase√±a</h3>
        <input type="password" class="form-control" name="pass" id="pass">
        <button type="submit">Acceder</button>
    </form>



    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(alert) { %>
        <script defer>
            document.addEventListener('DOMContentLoaded', function() {
                const isDarkMode = document.body.classList.contains('dark-mode');
    
                Swal.fire({
                    title: '<%= alertTitle %>',
                    text: '<%= alertMessage %>',
                    icon: '<%= alertIcon %>',
                    showConfirmButton: <%= showConfirmButton %>,
                    timer: <%= timer %>,
                    background: isDarkMode ? '#2b2b2b' : '#fff',
                    color: isDarkMode ? '#fff' : 'hsl(0,0%,33%)',
                    confirmButtonColor: isDarkMode ? 'rgb(69, 100, 121)' : '#7066e0',  
                    iconColor: isDarkMode ? '#f8bb86' : '#3085d6', 
                    backdrop: isDarkMode ? 'rgba(0, 0, 0, 0.4)' : ''  // Fondo semi-transparente
                }).then(() => {
                    window.location = '/<%= ruta %>';
                });
            });
        </script>
    <% } %>
    

<footer>
    <div class="derechos">
        <p>2024 All rights reserved</p>
    </div>
</footer>
</body>
</html>
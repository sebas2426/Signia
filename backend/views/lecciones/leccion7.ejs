            <button class="botonParejas" data-pareja2="Azul"><img src="/frontend/images/colores/Azul.png" alt="" style="width: 100%; height: auto;"></button>
            <button class="botonParejas" data-pareja2="Verde"><img src="/frontend/images/colores/Verde.png" alt="" style="width: 100%; height: auto;"></button>
        </div>

        <div class="textoParejas">
            <div class="opcionesParejas">
                <div class="divBlanco" data-pareja2="Azul"></div>
                <div class="divParejas ocho">Azul</div>
            </div>
            <div class="opcionesParejas">
                <div class="divBlanco" data-pareja2="Rojo"></div>

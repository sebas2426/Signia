    <p id="resultado-reflejos"></p>
    <button id="boton-siguiente-nivel-reflejos" style="display: none;">Siguiente Nivel</button>
    <button id="reiniciarJuegoReflejos" style="display: none;">Reiniciar Juego</button>
  </div>
  

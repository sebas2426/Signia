      <button class="sena-reflejos" data-palabra="Boca"><img src="/frontend/images/partes_cuerpo/Boca.png" alt="Seña de Boca"></button>
      <button class="sena-reflejos" data-palabra="Brazo"><img src="/frontend/images/partes_cuerpo/Brazo.png" alt="Seña de Brazo"></button>
      <button class="sena-reflejos" data-palabra="Mejilla"><img src="/frontend/images/partes_cuerpo/Mejilla.png" alt="Seña de Mejilla"></button>
    </div>

    <div id="contenedor-senas-reflejos-nivel-3" class="contenedor-senas" style="display: none;">
        <!-- Nivel 3-->
        <button class="sena-reflejos" data-palabra="Pierna"><img src="/frontend/images/partes_cuerpo/Pierna.png" alt="Seña de Pierna"></button>
        <button class="sena-reflejos" data-palabra="Mano"><img src="/frontend/images/partes_cuerpo/Mano.png" alt="Seña de Mano"></button>
        <button class="sena-reflejos" data-palabra="Pie"><img src="/frontend/images/partes_cuerpo/Pie.png" alt="Seña de Pie"></button>
        <button class="sena-reflejos" data-palabra="Rodilla"><img src="/frontend/images/partes_cuerpo/Rodilla.png" alt="Seña de Rodilla"></button>

            <button class="botonParejas" data-pareja2="Miercoles"><img src="/frontend/images/dias_semana/Miercoles.png" alt=""></button>
        </div>
            <div class="textoParejas">
                <div class="opcionesParejas">
                    <div class="divBlanco" data-pareja2="Miercoles"></div>
